# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
    font xft:inconsolata 10 
    id bar-0
    status_command ~/.conky/.conky-i3bar2
    position bottom 
    mode dock
    workspace_buttons no
    tray_output output
    colors { ##            contorno sfondo testo 
    	  	 background $gray1
           statusline $gray3
           active_workspace $gray3 $gray1 $gray3
           focused_workspace $gray3 $gray1 $gray3
           inactive_workspace $gray3 $gray1
          } 

   }

bar {
    font xft:inconsolata 10 
